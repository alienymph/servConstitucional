<%- include('partials/header', { title: 'Nueva Vinculación' }) %>

<div class="main-container">
  <div class="content-area">
    <main>
      <h2 class="title-font">Nueva Vinculación</h2>

      <form action="/vinculaciones/nuevo" method="POST" class="form-container">

        <div class="form-group">
          <label>Nombre de empresa/UR:</label>
          <input
            type="text"
            name="empresaNombre"
            placeholder="Ej. Empresa XYZ"
            required
          >
        </div>

        <!-- ❌ PDF ELIMINADO -->

        <div class="form-group">
          <label>Tipo:</label>
          <input
            type="text"
            name="tipo"
            placeholder="Ej. Contrato, Acuerdo"
          >
        </div>

        <!-- ✅ VIGENCIA DIVIDIDA, MISMO ESTILO -->
        <div class="form-group">
          <label>Vigencia inicio:</label>
          <input
            type="date"
            name="vigenciaInicio"
            required
          >
        </div>

        <div class="form-group">
          <label>Vigencia fin:</label>
          <input
            type="date"
            name="vigenciaFin"
            required
          >
        </div>

        <div class="form-group">
          <label>Comentarios:</label>
          <textarea
            name="comentarios"
            placeholder="Agrega observaciones..."
          ></textarea>
        </div>

        <button type="submit" class="see-all-btn">
          Agregar Vinculación
        </button>

      </form>
    </main>
  </div>
</div>

<%- include('partials/footer') %>
