<%- include('partials/header', { title: 'Nueva Vinculación' }) %>

<div class="main-container">
  <div class="content-area">
    <main>
      <h2 class="title-font">Nueva Vinculación</h2>

      <form action="/vinculaciones/nuevo" method="POST" class="form-container">
        <div class="form-group">
          <label>Nombre de empresa/UR:</label>
          <input type="text" name="empresaNombre" placeholder="Ej. Empresa XYZ" required>
        </div>

        <div class="form-group">
          <label>Selecciona PDF:</label>
          <select name="pdfId" required>
            <% archivos.forEach(f => { %>
              <option value="<%= f._id %>"><%= f.nombre %></option>
            <% }) %>
          </select>
        </div>

        <div class="form-group">
          <label>Tipo:</label>
          <input type="text" name="tipo" placeholder="Ej. Contrato, Acuerdo">
        </div>

        <div class="form-group">
          <label>Vigencia:</label>
          <input type="date" name="vigencia">
        </div>

        <div class="form-group">
          <label>Comentarios:</label>
          <textarea name="comentarios" placeholder="Agrega observaciones..."></textarea>
        </div>

        <button type="submit" class="see-all-btn">Agregar Vinculación</button>
      </form>
    </main>
  </div>
</div>

<%- include('partials/footer') %>
