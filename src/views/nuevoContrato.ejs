<%- include('partials/header', { title: 'Nuevo Contrato' }) %>

<div class="main-container">
  <div class="content-area">
    <main>

      <h2 class="title-font mb-4">
        Nuevo Contrato - <%= empresa.nombre %>
      </h2>

      <form action="/contratos/nuevo/<%= empresa._id %>"
            method="POST"
            class="form-container">

        <!-- EMPRESA -->
        <div class="form-group">
          <label>Empresa / UR</label>
          <input type="text"
                 value="<%= empresa.nombre %>"
                 disabled>
        </div>

        <!-- TIPO -->
        <div class="form-group">
          <label>Tipo</label>
          <input type="text"
                 name="tipo"
                 placeholder="Ej. Convenio, Acuerdo">
        </div>

        <!-- TITULAR -->
        <div class="form-group">
          <label>Titular</label>
          <input type="text" name="titular">
        </div>

        <div class="form-group">
          <label>Cargo</label>
          <input type="text" name="cargo">
        </div>

        <div class="form-group">
          <label>Correo</label>
          <input type="email" name="correo">
        </div>

        <div class="form-group">
          <label>
            <input type="checkbox" name="cuentaINE" value="true">
            Cuenta con INE
          </label>
        </div>

        <!-- VIGENCIAS -->
        <div class="form-group">
          <label>Vigencia inicio</label>
          <input type="date" name="vigenciaInicio">
        </div>

        <div class="form-group">
          <label>Vigencia fin</label>
          <input type="date" name="vigenciaFin">
        </div>

        <!-- COMENTARIOS -->
        <div class="form-group">
          <label>Comentarios</label>
          <textarea name="comentarios"
                    placeholder="Observaciones..."></textarea>
        </div>

        <!-- BOTONES -->
        <div class="d-flex gap-2">
          <button type="submit" class="see-all-btn">
            Crear contrato
          </button>

          <a href="/vinculaciones/empresa/<%= empresa._id %>"
             class="btn btn-secondary">
            Cancelar
          </a>
        </div>

      </form>

    </main>
  </div>
</div>

<%- include('partials/footer') %>
