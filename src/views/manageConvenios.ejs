<%- include('partials/header', { title: 'Gestionar Convenios' }) %>

<div class="container mt-4">

  <div class="card animate__animated animate__fadeIn">
    <div class="card-body">

      <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0">Gestionar Convenios</h4>

        <div class="d-flex gap-2">
          <input id="q" class="form-control form-control-sm"
            placeholder="Buscar por empresa o número de convenio">
          <button id="searchBtn" class="btn btn-sm btn-outline-primary">Buscar</button>
          <a href="/convenios/nueva" class="btn btn-sm btn-primary">Nuevo Convenio</a>
        </div>
      </div>

      <div class="table-responsive">
        <table class="table table-hover table-sm align-middle">
          <thead class="table-light">
            <tr>
              <th>#</th>
              <th>Unidad Receptora</th>
              <th>Año</th>
              <th>Creación</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody id="tbody">
            <% if (convenios.length === 0) { %>
              <tr>
                <td colspan="5" class="text-center text-muted py-4">
                  No hay convenios
                </td>
              </tr>
            <% } %>
            <% convenios.forEach(c => { %>
              <tr>
                <td><%= c.numeroConvenio %></td>
                <td><%= c.nombreUR %></td>
                <td><%= c.anio %></td>
                <td><%= new Date(c.fechaCreacion).toLocaleDateString() %></td>
                <td>
                  <a class="btn btn-sm btn-primary me-1" href="/convenios/editar/<%= c._id %>">Editar</a>
                  <button class="btn btn-sm btn-danger" data-id="<%= c._id %>">Eliminar</button>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <div id="toastContainer" class="position-fixed bottom-0 end-0 p-3" style="z-index:1080"></div>

    </div>
  </div>

</div>

<script src="/js/manageConvenios.js"></script>

<%- include('partials/footer') %>
