<%- include('partials/header', { title: 'Editar empresa' }) %>

<div class="container mt-4">
  <h3>Editar empresa / UR</h3>

  <form action="/vinculaciones/empresas/<%= empresa._id %>" method="POST">
    <div class="mb-3">
      <label class="form-label">Nombre de la empresa</label>
      <input
        type="text"
        name="nombre"
        class="form-control"
        value="<%= empresa.nombre %>"
        required
      >
    </div>

    <button type="submit" class="btn btn-primary">
      Guardar cambios
    </button>

    <a href="/vinculaciones/empresas" class="btn btn-secondary">
      Cancelar
    </a>
  </form>
</div>

<%- include('partials/footer') %>
